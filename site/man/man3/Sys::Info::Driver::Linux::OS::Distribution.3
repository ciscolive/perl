\&    use Sys::Info::Driver::Linux::OS::Distribution;
\&    my $distro = Sys::Info::Driver::Linux::OS::Distribution\->new;
\&    my $name   = $distro\->name;
\&    if( $name ) {
\&        my $version = $distro\->version;
\&        print "you are running $distro, version $version\en";
\&    }
\&    else {
\&        print "distribution unknown\en";
\&    }
